<?xml version="1.0" encoding="UTF-8"?>
<window>
	<animation effect="fade" time="500">WindowOpen</animation>
    <animation effect="fade" time="500">WindowClose</animation>
	<controls>
		<control type="group">
			<left>502</left>
			<top>363</top>
			<control type="image">
				<description>Main Background for OK Dialog</description>
				<width>916</width>
				<height>396</height>
				<texture border="">okbg.png</texture>
			</control>
			<control type="label" id="1">
				<description>Header Text</description>
				<left>4</left>
				<top>30</top>
				<width>908</width>
				<height>40</height>
				<textcolor>$INFO[Window().Property(dhtext)]</textcolor>
				<textoffsetx>15</textoffsetx>
				<align>center</align>
			</control>
			<control type="textbox" id="2">
				<description>Message Text</description>
				<left>60</left>
				<top>88</top>
				<width>825</width>
				<height>215</height>
				<autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
			</control>
			<control type="button" id="5">
				<description>Cancel button</description>
				<left>395</left>
				<top>315</top>
                <width>150</width>
                <height>50</height>
				<label>Cancel</label>
                <align>center</align>
				<texturefocus colordiffuse="$INFO[Window().Property(btnfocus)]" border="5">Buttons/plainbtn_focus.png</texturefocus>
                <texturenofocus>Buttons/pixel.png</texturenofocus>
    			<onclick>SetProperty(btnret, true)</onclick>
			</control>
			<control type="progress" id="10">
				<left>13</left>
				<top>280</top>
				<width>890</width>
                <height>24</height>
				<midtexture border="2">osd/midtexture.png</midtexture>
				<info>System.Progressbar</info>
			</control>
		</control>
	</controls>
</window>